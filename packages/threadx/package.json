{
  "name": "@shelchin/threadx",
  "version": "0.2.0",
  "description": "Seamless Worker communication - call Workers like async functions. Supports Web Workers and Node.js worker_threads.",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./worker": {
      "types": "./dist/worker.d.ts",
      "default": "./dist/worker.js"
    }
  },
  "files": [
    "dist",
    "examples"
  ],
  "scripts": {
    "build": "bun build.ts",
    "dev": "bun build.ts --watch",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "keywords": [
    "worker",
    "web-worker",
    "worker-threads",
    "rpc",
    "thread",
    "parallel",
    "async",
    "streaming",
    "generator"
  ],
  "peerDependencies": {
    "@types/node": ">=18"
  },
  "peerDependenciesMeta": {
    "@types/node": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.0.0"
  }
}
